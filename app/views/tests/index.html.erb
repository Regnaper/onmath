<% provide(:title, 'Тесты') %>
<h2>Назначенные тесты</h2>

<%= will_paginate %>
<ul class="tests">
  <%= render @tests %>
</ul>
<%= will_paginate %>

<p></p>
<div class="col-md-6 col-md-offset-3">
  <% if current_user.admin? %>
    <%= form_for(@test) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :name, class: 'form-control', value: "Новый тест" %>

      <%= f.submit "Создать", class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>